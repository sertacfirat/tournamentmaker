rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Data Rules
    match /users/{userId} {
      // 1. Authentication: Must be logged in
      // 2. Ownership: Can only read/write their OWN data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // OPTIONAL: Basic Validation (Prevent massive data blobs)
      // Allow write if the 'tournaments' array isn't too huge (e.g., < 50 tournaments)
      // This protects your free quota storage effectively.
      // allow write: if request.auth.uid == userId 
      //              && request.resource.data.tournaments.size() < 50;
    }
  }
}
